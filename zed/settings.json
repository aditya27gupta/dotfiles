{
  "features": {
    "inline_completion_provider": "none"
  },
  "terminal": {
    "dock": "right",
    "working_directory": "current_project_directory"
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Short Giraffe",
    "dark": "One Dark"
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": false
  },
  "git": {
      "git_gutter": "tracked_files"
    },
  "format_on_save": "on",
  "use_autoclose": true,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "search_results":true,
  "hover_popover_enabled": true,
  "hour_format": "hour24",
  "unnecessary_code_fade": 0.7,
  "enable_language_server": true,
  "languages": {
    "JSON": {
      "tab_size": 4
    }
  },
  "ensure_final_newline_on_save": true,
  "preferred_line_length": 96,
  "soft_wrap": "preferred_line_length",
  "vim_mode": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "project_panel": {
    "button": true,
    "default_width": 180,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 10,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },
  "assistant": {
    "enabled": false,
    "button": false,
    "version": "2"
  }
}
