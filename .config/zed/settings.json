{
  "features": {
    "edit_prediction_provider": "none"
  },
  "terminal": {
    "dock": "bottom",
    "working_directory": "current_project_directory"
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "One Dark"
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "git": {
    "git_gutter": "tracked_files"
  },
  "format_on_save": "on",
  "use_autoclose": true,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "search_results": true,
  "hover_popover_enabled": true,
  "hour_format": "hour24",
  "unnecessary_code_fade": 0.7,
  "enable_language_server": true,
  "languages": {
    "JSON": {
      "tab_size": 4,
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "show_edit_predictions": true
    }
  },
  "ensure_final_newline_on_save": true,
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 110,
  "vim_mode": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "project_panel": {
    "button": true,
    "default_width": 180,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 10,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.5-sonnet"
    },
    "enabled": true,
    "button": true
  }
}
